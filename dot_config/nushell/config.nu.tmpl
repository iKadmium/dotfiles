# Minimal Nushell Config
$env.config = {
    show_banner: false # Disables the "Welcome to Nushell" text
    edit_mode: vi      # Or 'emacs'
}

$env.EDITOR = "nvim"

{{- if eq .chezmoi.os "darwin" }}
# macOS paths

$env.PATH ++= ['/opt/homebrew/bin']

{{- else if eq .chezmoi.os "linux" }}
# Linux paths

{{- end }}


# Aliases
alias cat = bat
alias top = btop
alias vi = nvim
alias vim = nvim

# Starship prompt (run 'starship init nu | save -f ~/.cache/starship/init.nu' once to regenerate)
source ~/.cache/starship/init.nu
source ~/.zoxide.nu

# Source local config if it exists
const local_config = if ("~/config.local.nu" | path expand | path exists) { "~/config.local.nu" | path expand } else { null }
source $local_config
