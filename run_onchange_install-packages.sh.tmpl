{{ if eq .chezmoi.os "linux" -}}
#!/bin/sh
sudo add-apt-repository -y ppa:maveonair/helix-editor
sudo apt install helix zsh zoxide unzip

mkdir -p ~/.local/bin
curl -s https://ohmyposh.dev/install.sh | bash -s -- -d ~/.local/bin

chsh $USER -s /usr/bin/zsh

git clone --depth 1 https://github.com/junegunn/fzf.git ~/.fzf
echo __--HERE--__
pwd
FILENAME=bat_0.24.0_$CHEZMOI_ARCH.deb
curl -L https://github.com/sharkdp/bat/releases/latest/download/$FILENAME -o $FILENAME && sudo dpkg -i $FILENAME && rm $FILENAME

{{ else if eq .chezmoi.os "darwin" -}}
#!/bin/sh
brew install helix zoxide fzf jandedobbeleer/oh-my-posh/oh-my-posh bat

{{ end -}}
